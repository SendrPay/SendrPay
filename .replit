modules = ["nodejs-20", "postgresql-16"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Bot Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Discord Deploy"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Discord Bot"

[[workflows.workflow]]
name = "Bot Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx tsx src/index-polling.ts"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "Discord Deploy"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "tsx src/discord/deploy-commands.ts"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "Discord Bot"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "tsx src/discord/bot.ts"

[workflows.workflow.metadata]
outputType = "console"

[[ports]]
localPort = 5000
externalPort = 80

[deployment]
deploymentTarget = "gce"
run = ["sh", "-c", "npx prisma generate && npx prisma db push --skip-generate && npx tsx src/index.ts"]
